{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug Minishell",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/minishell",
		"args": [],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": true,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable process-follow-fork-mode",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  },
		  {
			"description": "Ask whether to follow parent or child",
			"text": "set follow-fork-mode parent",
			"ignoreFailures": false
		}
		],
		"miDebuggerPath": "/usr/bin/gdb",
		"preLaunchTask": "build",
		"internalConsoleOptions": "openOnSessionStart",
		"logging": {
		  "trace": true,  // Puedes habilitar esto para más detalles de depuración
		  "engineLogging": true,
		  "programOutput": true,
		  "exceptions": true
		}
	  }
	]
  }
